<div class="container-fluid">
    <div class="row justify-content-lg-center">
        <div class="col-lg-auto">
            <h1 class="fancyheading">It'll only be a moment.</h1>
            <h3 class="fancyheading">The others are thinking up questions.</h3>

        </div>
    </div>
    <div id="player-listing" class="div" style="text-align: center">
    {{#each players}}
        <div class="player-display col-12">{{this.player_name}} is <span class="highlight">{{this.displayStatus}}</span>.</div><br>
    {{/each}}
    </div>

    <div class="medium-info">
        <span class="highlight" id="joined-players-counter">{{players_count}}/5</span> people have joined
    </div>
</div>

